.goodies-list > .goody
  display: -webkit-box;
  border-bottom: solid #ccc 1px
.goodies-list > .goody > .left
  width: 70px
  padding: 6px 5px;
  margin-right: 5px;
  text-align: center
  background-color: #f5f5f5
  border-right: solid #ccc 1px
.goodies-list > .goody > .right
  padding: 6px 5px
  -webkit-box-flex: 1;
.goodies-list > .goody .business-name
  font-size: 1.1rem
  position: relative
  z-index: 3
  line-height: 14px
  margin: 0 0 -12px 0;
  padding: 0
.goodies-list > .goody .cents-remaining
  position: relative
  z-index: 3
  margin: -12px 0 0 0
.goodies-list > .goody .raised-title
  margin-top: 8px
  font-size: 9px
  text-transform: uppercase

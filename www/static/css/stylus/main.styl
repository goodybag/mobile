@import 'globals'

body, html
  fonts()
  background-color #364d72
  padding-bottom: 22px
  bg-white-stripe()

.outer-container
  padding-top 49px

.header-nav
  position fixed
  z-index: 100
  top 0
  height 49px
  padding: 0 12px
  width 100%
  -webkit-box-sizing border-box
  box-sizing border-box
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#4871a3), color-stop(100%,#273d57));
  background: -webkit-linear-gradient(top, #4871a3 0%,#273d57 100%);
  background: linear-gradient(top, #4871a3 0%,#273d57 100%);
  bg-linear-gradient(top, #4871a3, 0%, #273d57, 100%)
  box-shadow inset 0 1px 0 rgba(255,255,255, 0.4), 0 3px 6px rgba(0,0,0, 0.35)
  border-bottom solid #000 1px

.header-nav > .flex-columns
  position:relative
  z-index 2
.header-nav > .flex-columns > .column
  padding-top: 8px
.header-nav > .flex-columns > .middle
  text-align center
  padding-top: 2px
.header-nav > .flex-columns > .right
  text-align right

.header-nav .graphic-wrapper
  position: relative;
.header-nav .graphic-wrapper > .graphic
  position absolute
  left: 50%;
.header-nav .graphic-wrapper > .accent
  margin-left: -215px;
  width 430px
  height 49px
.header-nav .logo
  position: absolute;
  left: 50%
  margin-left: -42px
  display: inline-block
  margin-top 2px
  width: 85px
  height 46px

// Begin Footer Nav

.main-nav
  position: fixed
  bottom: 0;
  width: 100%
  height: 61px
  z-index: 100

.main-nav .nav-shadow
  display: none
  position: absolute
  width: 100%
  top: 14px
  z-index: 101
  height: 6px

  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#19283a), color-stop(100%,#354F72));
  background: -webkit-linear-gradient(top, #19283a 0%, #354F72 100%)
  background: linear-gradient(top, #19283a 0%, #354F72 100%);

.main-nav > .tapin-bg
  display: inline-block
  position: absolute
  top: 0
  left: 50%
  z-index: 102
  margin-left: -39px
  width: 79px
  height: 61px

.main-nav > ul
  position: absolute
  bottom: 0
  width: 100%
  height: 45px
  list-style: none
  box-shadow: inset 0 2px 4px rgba(0,0,0,0.55)
  display: -webkit-box

  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(52,82,122,1)), color-stop(100%,rgba(19,33,51,1)));
  background: -webkit-linear-gradient(top, rgba(52,82,122,1) 0%,rgba(19,33,51,1) 100%);
  background: linear-gradient(top, rgba(52,82,122,1) 0%,rgba(19,33,51,1) 100%);

.main-nav .menu-item
  position: relative
  width: 60px
  height: 57px
  z-index: 102
  top: -15px

.main-nav > .flex-columns > .column
  text-align: center

.main-nav .separator
  display: inline-block
  height: 42px
  width: 2px
  margin-top: 1px

.main-nav .menu-item > a
  position: absolute
  width: 100%
  padding-top: 50px
  text-align: center
  bottom: 0
  color: #8c95a0
  font-size: 9px
  text-transform: uppercase
  text-shadow: 0 -1px 0 #000
  text-decoration: none

.main-nav .menu-item.active > a
  color: #fff


// End Footer Nav

.sub-header
  box-sizing border-box
  background-color #1d2b41
  bg-white-stripe()
  border-bottom solid #000 1px
  box-shadow  0 1px 0 rgba(255,255,255, 0.2)
  padding: 14px 3%
  color: #99a1ae;

.sub-header.profile > .left
  width: 56%
.sub-header.profile > .right {
  text-align: right;
  width: 43.7%; // android not adding percentages correctly
}
.sub-header.profile .user-info > .item {
  display: inline-block
  vertical-align: middle
}
.sub-header.profile .user-info .picture {
  width: 45px;
  border: solid 4px #e9ebed;
  margin-right: 6px;
}
.sub-header.profile .user-info .name {
  font-size 1.2rem
  font-weight 500
  color #fff
}
.sub-header.profile .user-info .donated
  margin-top: 4px
  color #99a1ae

.sub-header.profile .pledge-bank
  display inline-block
  text-align center
.sub-header.profile .pledge-bank > .title {
  color: #99a0ad
  font-size 0.8rem
  margin-bottom: 4px
  text-transform uppercase
}
.sub-header.profile .pledge-bank > .pledge-wrapper
  padding 3px
  border: solid 1px #000
  border-top solid 1px #1a1a1a
  border-radius 7px
  box-shadow inset 0 1px 1px rgba(255,255,255, 0.1), 0 1px 0 rgba(255,255,255, 0.15)
  bg-linear-gradient(top, #333, 0%, #000, 100%)

.sub-header.profile .pledge-bank > .pledge-wrapper > .pledge
  position: relative
  font-size: 0;
  border: solid #000 1px
  border-radius 5px
  box-shadow: inset 0 4px 6px rgba(0,0,0, 0.9)
  background: #fff
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(34%,rgba(204,204,204,1)), color-stop(59%,rgba(211,211,211,1)), color-stop(100%,rgba(255,255,255,1)));
  background: -webkit-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(204,204,204,1) 34%,rgba(211,211,211,1) 59%,rgba(255,255,255,1) 100%);
  background: linear-gradient(top, rgba(255,255,255,1) 0%,rgba(204,204,204,1) 34%,rgba(211,211,211,1) 59%,rgba(255,255,255,1) 100%);

.sub-header.profile .pledge-bank > .pledge-wrapper > .pledge > .separator
  position absolute
  height 100%
  width: 1px;
  background: -webkit-linear-gradient(top, rgba(32,32,32,1) 0%,rgba(188,188,188,1) 60%)
  background: linear-gradient(top, rgba(32,32,32,1) 0%,rgba(188,188,188,1) 60%)

.sub-header.profile .pledge-bank > .pledge-wrapper > .pledge > .digit
  font-size 1.4rem
  font-weight: 700
  color #222
  display: inline-block
  padding: 4px 8px 4px 9px
  vertical-align: bottom

.sub-header.profile .pledge-bank > .pledge-wrapper > .pledge > .digit:last-child
  border-right none
  padding 4px 8px

.sub-header.profile .pledge-bank > .pledge-wrapper > .pledge > .decimal
  padding: 4px 6px


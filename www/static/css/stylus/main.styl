// All this meter is stuff is really un-organized

// Simple meter for less capable browsers
.goodies-list > .goody .simple-meter
  border: solid #b2b5bc 1px;
  border-radius: 8px

.goodies-list > .goody .simple-meter .wrap
  padding: 1px
  border-radius: 7px

.goodies-list > .goody .simple .business-name
  margin: 0 0 4px 3px

.goodies-list > .goody .simple-meter .progress
  height: 16px
  border-radius: 6px
  background: url("/static/images/white-stripe-diagonal.png"), -webkit-linear-gradient(top, rgba(183,237,21,1) 0%,rgba(140,186,24,1) 28%,rgba(78,126,11,1) 65%,rgba(59,86,0,1) 99%);

.goodies-list > .goody .simple .stats
  margin-top: 3px

.goodies-list > .goody .simple .stats .key
  margin-left: 2px

.goodies-list > .goody .simple .stats .key + .key
  margin-left: 6px

.meter .circle {
  margin-left: -6px;
  width: 48px;
  height: 48px;
  line-height: 48px
  text-align: center
  border-radius: 25px 25px 25px 24px;
  border: solid rgba(178,181,188, 0.8) 1px;
  box-shadow: inset 1px 2px 0 #fff,inset 1px -2px 0 #fff,inset -2px 0 0 #fff,inset -2px -2px 0 #fff,inset 0 3px 0 rgba(255,255,255,0.35),-20px -20px 0 #fff,20px -20px 0 #fff,20px 20px 0 #fff,-20px 20px0 #fff;
}
.meter .circle-wrap {
  overflow: hidden;
  width: 48px;
  height: 51px;
  position: absolute;
  right: 0;
}
.meter .goal
  color: #335278
  font-weight: 700

.meter .wrap {
  display: -webkit-box;
  width: 100%;
  position: relative;
  height: 51px;
  overflow: hidden;
}
.meter .progress {
  position: absolute;
  z-index: 0;
  height: 100%;
  width: 70%;
  background: url("/static/images/white-stripe-diagonal.png"), -webkit-linear-gradient(top, rgba(183,237,21,1) 0%,rgba(140,186,24,1) 28%,rgba(78,126,11,1) 65%,rgba(59,86,0,1) 99%);
}
.meter.complete .progress {
  width: 100%;
  -webkit-animation: progress-slide 0.6s linear infinite;
}
@-webkit-keyframes progress-slide {
  0% {
    background-position: 0 0;
  }

  100% {
    background-position: 25px 25px;
  }
}
.meter .progress-cover {
  position: absolute;
  top: 19px;
  width: 70%;
  height: 12px;
  border-radius: 9px 0 0 9px;
  border: solid #70901b 1px;
  border-right: 0;
  z-index: 2;
}
.meter .top-mask {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  height: 18px;
  padding-left: 45px;
  margin-left: -45px;
  background: white;
  border-bottom: solid #b2b5bc 1px;
  border-radius: 0 0 33px 0;
  box-shadow: 1px 2px 0 #fff, 0 3px 0 rgba(255,255,255,0.35);
}
.meter .bottom-mask {
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  width: 100%;
  height: 17px;
  padding-left: 45px;
  margin-left: -45px;
  background: white;
  border-top: solid #b2b5bc 1px;
  border-radius: 0 19px 0 0;
  box-shadow: 1px -2px 0 #fff;
}
.meter .inner {
  position: absolute;
  top: 0;
  left: 2px;
  width: 3px;
  height:10px;
  border: solid 3px #fff;
  border-right: none;
  border-radius: 5px 0 0 5px;
}
.meter {
  position: relative;
}
.meter .left-border
  position: absolute;
  top: 17px;
  left: -5px;
  width: 10px;
  height: 16px;
  border-radius: 12px 0 0 12px;
  border: solid 1px #b2b5bc;
  border-right: none;
  z-index: 3;
// End Meter stuff


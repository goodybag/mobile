<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="label_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="field_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18dip</item>
    </style>
    <style name="green_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/green_gradient</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
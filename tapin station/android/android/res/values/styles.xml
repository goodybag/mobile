<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_text_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">30dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title_blue_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:background">@drawable/rounded_blue_gradient</item>
        <item name="android:onClick">@string/click_method_name</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="label_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="field_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_gradient</item>
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18dip</item>
    </style>
    <style name="link_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">@string/click_method_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textColorHighlight">@color/color_link</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="blue_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/blue_gradient</item>
        <item name="android:onClick">@string/click_method_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="green_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/green_gradient</item>
        <item name="android:onClick">@string/click_method_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>